<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/help_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context="com.voelkerh.cPast.ui.notes.NotesFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/notes_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notes_fragment_title"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:padding="32dp"
        />

        <TextView
                android:id="@+id/notes_text_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="32dp"
                android:hyphenationFrequency="full"
                android:text="@string/notes_fragment_text_info"
                android:textColor="@color/fontColorSecondary"
                android:textSize="20sp"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="1.3"
        />

        <TextView
                android:id="@+id/notes_text_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="32dp"
                android:hyphenationFrequency="full"
                android:text="@string/notes_fragment_text_files"
                android:textColor="@color/fontColorSecondary"
                android:textSize="20sp"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="1.3"
        />

        <TextView
                android:id="@+id/notes_capture_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="40dp"
                android:hyphenationFrequency="full"
                android:text=""
                android:textColor="@color/fontColor"
                android:textSize="16sp"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="1.2"
        />

        <TextView
                android:id="@+id/notes_diamond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/diamond"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textSize="20sp"
                android:lineSpacingMultiplier="1.3"
        />

    </LinearLayout>
</ScrollView>