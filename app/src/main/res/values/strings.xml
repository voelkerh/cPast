    <string name="about_fragment_title">About</string>
    <string name="about_fragment_text">
        <![CDATA[<p>This app is a revised version of Capturing the Past. This app was originally developed in a <a href="https://blogs.sussex.ac.uk/capturing-the-past/about-us/">research project</a> at the <a href="https://www.sussex.ac.uk/research/centres/sussex-humanities-lab/">Sussex Humanities Lab</a>. The original project was funded by the <a href="https://ahrc.ukri.org/">Arts and Humanities Research Council</a>.</p>]]></string>
    <string name="help_fragment_title">Help</string>
    <string name="help_fragment_acc_title_1">Add and Select Archive</string>
    <string name="help_fragment_acc_body_1_text" tools:ignore="Typos">
        <![CDATA[<p>- Enter the full archive name and the short form as you would cite the archive.</p><p>- The short form will be part of the photo name:</p><p><b><u>BArch</u></b>_DQ1_14614_1.jpg</p>]]></string>
    <string name="help_fragment_acc_title_2">Add record information</string>
    <string name="help_fragment_acc_body_2_text" tools:ignore="Typos">
        <![CDATA[<p>- Enter the reference for the next record to photograph.</p><p>- The reference will be part of the photo name:</p><p>BArch_<b><u>DQ1</u>_<u>14614</u></b>_<b><u>1</u></b>.jpg</p><p>- The photo name ends with a counter. It increases as you take photos of the record.</p>]]></string>
    <string name="help_fragment_acc_title_3">Define folder structure via record name</string>
    <string name="help_fragment_acc_body_3_text" tools:ignore="Typos">
        <![CDATA[<p>- Add hierarchy levels using \"_\" or \"/\" in the record reference.</p><p>- BArch<b><u>_</u></b>DQ1<b><u>_</u></b>14614<b><u>_</u></b>1.jpg will result in:</p>]]></string>
    <string name="help_fragment_acc_title_4">Take notes and photos</string>
    <string name="help_fragment_acc_body_4_text">
        <![CDATA[<p>- Take notes for the next photo you take.</p><p>- Press \"Take photo\" to open the camera.</p><p>- Saving the photo automatically saves your notes.</p><p>- Find your photos and notes in the menu (☰).</p>]]></string>
    <string name="help_fragment_acc_title_5">Use notes and photos on your computer</string>
    <string name="help_fragment_acc_body_5_text">
        <![CDATA[<p>- You\'re done in the archive? Connect your phone to your computer.</p><p>- Access your phone\'s file system on your computer.</p><p>- Photos: > Pictures > cPast.</p><p>- Notes: > Documents > cPast.</p>]]></string>
    <string name="notes_fragment_title">Notes</string>
    <string name="notes_fragment_text_info">
        <![CDATA[<p>Your notes are saved in <b>cPast_Notes.csv</b> in the Documents directory on your phone.</p>]]></string>
